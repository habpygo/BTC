package utils

import "BTC/psychic/cards"

func FormatSolution(solution int, hand []cards.Card, deck []cards.Card) {

	var solutionArray []string
	solutionArray = append(solutionArray)

	switch solution {
	case 0:
		"straight-flush"
	case 1:
		"four-of-a-kind"
	case 2:
		"full-house"
	case 3:
		"flush"
	case 4:
		"straight"
	case 5:
		"three-of-a-kind"
	case 6:
		"two-pair"
	case 7:
		"one-pair"
	case 8:
		"highest-card"
	default:
	}

}
